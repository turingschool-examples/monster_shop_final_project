<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to image_tag("https://www.freepngimg.com/thumb/monster/34201-3-blue-monster-transparent-image-thumb.png"), root_path%>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "My Profile", "/profile" if current_user%>
      <%= link_to "Merchant Dashboard", "/merchant" if current_user_merchant?%>
      <%= link_to "Admin Dashboard", "/admin" if current_admin?%>
      <%= link_to "All Users", "/admin/users" if current_admin?%>
      <%= link_to "Login", login_path unless current_user%>
      <%= link_to "Logout", "/logout" if current_user%>
      <%= link_to "Register", register_path unless current_user%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" unless current_admin? %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
