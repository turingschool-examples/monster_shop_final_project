<section id = "user-info">
<%= @user.name %>
<%= @user.address %>
<%= @user.city %>, <%= @user.state %> <%= @user.zip %>
</section>

<table>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
<%= @merchant.item_orders_from_merchant(@order.id).each do |item_order| %>
  <section id = "item-<%=item_order.item.id%>">
    <tr>
      <td><img src= <%= item_order.item.image %>><p><%=link_to item_order.item.name, "/items/#{item_order.item.id}"%></p></td>
      <td><p><%= number_to_currency(item_order.price)%></p></td>
      <td><p><%= item_order.quantity %></p></td>
    </tr>
  </section>
<% end %>
</table>
